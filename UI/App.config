<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>

	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="System.Runtime.CompilerServices.Unsafe" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
			</dependentAssembly>
		</assemblyBinding>
	</runtime>

	<appSettings>
		<!-- Identificadores generales -->
		<add key="IdEmpresa" value="1" />
		<add key="ReportLogoPath" value="Resources/LogoUrbanSoft.png" />

		<!-- Mensaje corporativo genérico de error -->
		<add key="MensajeErrorConexion"
			 value="Ocurrió un error inesperado al intentar conectar con el servicio. Por favor, comuníquese con el soporte técnico de la empresa para obtener asistencia." />
		<add key="TituloErrorConexion" value="Error de conexión" />

		<!-- Diálogo de selección de idioma -->
		<add key="LblIdioma.es" value="Idioma:" />
		<add key="LblIdioma.en" value="Language:" />
		<add key="BtnConfigurar.es" value="Configurar" />
		<add key="BtnConfigurar.en" value="Configure" />
		<add key="BtnCancelar.es" value="Cancelar" />
		<add key="BtnCancelar.en" value="Cancel" />

		<!-- Mensaje de error de conexión -->
		<add key="TituloErrorConexion.es" value="Error de conexión" />
		<add key="TituloErrorConexion.en" value="Connection error" />
		<add key="MsgConexionNoEstablecida.es" value="No se pudo establecer conexión con la base de datos. ¿Desea configurar la conexión ahora?" />
		<add key="MsgConexionNoEstablecida.en" value="Could not connect to the database. Would you like to configure the connection now?" />

		<!-- Información de configuración -->
		<add key="MsgConfigNoEncontrada.es" value="No se encontró la configuración de conexión. Se debe configurar antes de continuar." />
		<add key="MsgConfigNoEncontrada.en" value="Connection configuration not found. You must configure it before continuing." />

		<add key="TituloConfigRequerida.es" value="Configuración requerida" />
		<add key="TituloConfigRequerida.en" value="Configuration required" />

		<add key="MsgConfigNoRealizadaReintentar.es" value="No se configuró la conexión. ¿Desea intentar nuevamente?" />
		<add key="MsgConfigNoRealizadaReintentar.en" value="The connection was not configured. Would you like to try again?" />

		<add key="TituloConfigNoConfigurada.es" value="Conexión no configurada" />
		<add key="TituloConfigNoConfigurada.en" value="Connection not configured" />

		<add key="MsgConfigActualizada.es" value="Configuración actualizada correctamente. Se reintentará la conexión." />
		<add key="MsgConfigActualizada.en" value="Configuration updated successfully. The connection will be retried." />

		<add key="TituloInfo.es" value="Información" />
		<add key="TituloInfo.en" value="Information" />

		<!-- Textos de ConfigurarConexionForm -->
		<add key="Cfg_Title.es" value="Configuración de conexión" />
		<add key="Cfg_Title.en" value="Connection configuration" />

		<add key="Cfg_LabelServidor.es" value="Servidor:" />
		<add key="Cfg_LabelServidor.en" value="Server:" />

		<add key="Cfg_LabelBaseDatos.es" value="Base de datos:" />
		<add key="Cfg_LabelBaseDatos.en" value="Database:" />

		<add key="Cfg_LabelUsuario.es" value="Usuario:" />
		<add key="Cfg_LabelUsuario.en" value="User:" />

		<add key="Cfg_LabelPassword.es" value="Contraseña:" />
		<add key="Cfg_LabelPassword.en" value="Password:" />

		<add key="Cfg_CheckTrusted.es" value="Usar autenticación integrada" />
		<add key="Cfg_CheckTrusted.en" value="Use integrated authentication" />

		<add key="Cfg_BtnProbar.es" value="Probar" />
		<add key="Cfg_BtnProbar.en" value="Test" />

		<add key="Cfg_BtnGuardar.es" value="Guardar" />
		<add key="Cfg_BtnGuardar.en" value="Save" />

		<add key="Cfg_ProbarOk.es" value="Conexión exitosa." />
		<add key="Cfg_ProbarOk.en" value="Connection successful." />

		<add key="Cfg_ProbarErrorPrefix.es" value="No se pudo conectar:" />
		<add key="Cfg_ProbarErrorPrefix.en" value="Could not connect:" />

		<add key="Cfg_GuardarOkPrefix.es" value="Archivo de conexión guardado correctamente. Ruta:" />
		<add key="Cfg_GuardarOkPrefix.en" value="Connection file saved successfully. Path:" />

		<add key="Cfg_GuardarOkTitle.es" value="Configuración de conexión" />
		<add key="Cfg_GuardarOkTitle.en" value="Connection configuration" />

		<add key="Cfg_GuardarErrorPrefix.es" value="Error al guardar la conexión:" />
		<add key="Cfg_GuardarErrorPrefix.en" value="Error saving the connection:" />
		
		<add key="Cfg_HelpTitle.es" value="Ayuda: Configurar conexión" />
		<add key="Cfg_HelpBody.es" value="Complete el nombre del servidor y la base de datos. Si usa autenticación de Windows, marque la casilla. Use 'Probar' para verificar la conexión antes de guardar. Presione F1 para ver esta ayuda en cualquier momento." />
		<add key="Cfg_HelpTitle.en" value="Help: Configure Connection" />
		<add key="Cfg_HelpBody.en" value="Enter the server and database name. If using Windows Authentication, check the box. Use 'Test' to verify the connection before saving. Press F1 at any time to view this help message." />

	</appSettings>
</configuration>
